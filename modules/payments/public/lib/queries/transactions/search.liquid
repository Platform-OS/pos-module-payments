{% comment %}
  Searches for transctions.

  Params:
    - limit Int
      default: 20
    - page: Int
      default: 1
    - params: Hash
{% endcomment %}
{% liquid
  assign page = page | default: params.page | to_positive_integer: 1
  assign limit = limit | default: params.limit | default: 20

  graphql r = 'modules/payments/transactions/search', args: params, limit: limit, page: page

  return r.transactions
%}
