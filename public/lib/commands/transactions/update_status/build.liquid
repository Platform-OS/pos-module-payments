{% liquid
  case object.payment_status
  when 'pending'
    assign status = 'app.statuses.transactions.pending'
  when 'success'
    assign status = 'app.statuses.transactions.succeeded'
  when 'expired'
    assign status = 'app.statuses.transactions.expired'
  else
    assign status = 'app.statuses.transactions.failed'
  endcase

  assign data = null | hash_merge: id: transaction.id, name: status
  return data
%}
